RewriteEngine On

# Обработка assets из src/assets
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^assets/(.*)$ src/assets/$1 [L]

# Обработка repository
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^repository/(.*)$ repository/$1 [L]

# Если файл или директория существуют, отдаём их напрямую
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Все остальные запросы направляем на index.php
RewriteRule ^(.*)$ index.php [QSA,L]
